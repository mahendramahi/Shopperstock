<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView_main_full_tag_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/llll"
        android:layout_alignRight="@+id/llll"
        android:maxLines="1"
        android:padding="5dp"
        android:text="Large Text"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:textSize="20dp" />

    <RelativeLayout
        android:id="@+id/llll"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@+id/textView_full_category_tag"
        android:layout_centerHorizontal="true"
        android:layout_margin="12dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView_fulllist_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:src="@drawable/pl_list_img" />

<!--         <ProgressBar -->
<!--             android:id="@+id/progressbar_full_list_img" -->
<!--             android:layout_width="wrap_content" -->
<!--             android:layout_height="wrap_content" -->
<!--             android:layout_centerHorizontal="true" -->
<!--             android:layout_centerVertical="true" /> -->
    </RelativeLayout>

    <TextView
        android:id="@+id/textView_full_category_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/llll"
        android:layout_below="@+id/textView_main_full_tag_text"
        android:layout_marginLeft="15dp"
        android:text="Category:"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/textView_full_price_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/llll"
        android:layout_alignRight="@+id/llll"
        android:layout_marginRight="16dp"
        android:gravity="right"
        android:text="Price:" />

</RelativeLayout>